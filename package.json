{
  "name": "type-relectron",
  "version": "0.0.1",
  "description": "A starter kit for electron+react+typescript",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make:win": "yarn make -p win32 --targets @electron-forge/maker-squirrel",
    "make:deb": "yarn make -p linux --targets @electron-forge/maker-deb",
    "make:rpm": "yarn make -p linux --targets @electron-forge/maker-rpm",
    "make:dmg": "yarn make -p darwin --targets @electron-forge/maker-dmg",
    "publish": "electron-forge publish",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,html,css}'",
    "test": "jest",
    "coverage": "yarn test --coverage",
    "test:e2e": "jest -c jest.e2e.js"
  },
  "keywords": [
    "electron",
    "electron-forge",
    "react",
    "typescript",
    "starter",
    "starter kit"
  ],
  "author": "Gabriel Wu",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel"
        },
        {
          "name": "@electron-forge/maker-wix"
        },
        {
          "name": "@electron-forge/maker-zip"
        },
        {
          "name": "@electron-forge/maker-dmg"
        },
        {
          "name": "@electron-forge/maker-deb"
        },
        {
          "name": "@electron-forge/maker-rpm"
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/renderer/index.html",
                  "js": "./src/renderer/index.tsx",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0"
  },
  "devDependencies": {
    "@babel/core": "7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "7.6.3",
    "@babel/preset-typescript": "7.6.0",
    "@electron-forge/cli": "6.0.0-beta.45",
    "@electron-forge/maker-deb": "6.0.0-beta.45",
    "@electron-forge/maker-dmg": "^6.0.0-beta.45",
    "@electron-forge/maker-rpm": "6.0.0-beta.45",
    "@electron-forge/maker-squirrel": "6.0.0-beta.45",
    "@electron-forge/maker-wix": "^6.0.0-beta.45",
    "@electron-forge/maker-zip": "6.0.0-beta.45",
    "@electron-forge/plugin-webpack": "6.0.0-beta.45",
    "@jest-runner/electron": "^2.0.2",
    "@marshallofsound/webpack-asset-relocator-loader": "0.5.0",
    "@testing-library/jest-dom": "^4.1.2",
    "@testing-library/react": "^9.3.0",
    "@types/jest": "^24.0.19",
    "@types/node": "12.11.7",
    "@types/react": "16.9.15",
    "@types/react-dom": "16.9.2",
    "babel-jest": "^24.9.0",
    "babel-loader": "8.0.6",
    "css-loader": "3.2.0",
    "electron": "7.0.0",
    "file-loader": "4.2.0",
    "husky": "3.0.9",
    "jest": "^24.9.0",
    "jest-transform-css": "^2.0.0",
    "jest-transform-graphql": "^2.1.0",
    "lint-staged": "9.4.2",
    "mini-css-extract-plugin": "0.8.0",
    "node-loader": "0.6.0",
    "prettier": "1.18.2",
    "spectron": "^9.0.0",
    "terser-webpack-plugin": "2.2.1",
    "ts-jest": "^24.1.0",
    "typescript": "3.6.4",
    "webpack-merge": "4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
