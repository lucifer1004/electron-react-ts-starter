{
  "name": "electron-react-ts-starter",
  "productName": "TypeRelectron",
  "version": "0.0.1",
  "description": "A starter kit for electron+react+typescript",
  "main": ".webpack/main",
  "scripts": {
    "start": "cross-env NODE_ENV=dev electron-forge start",
    "package": "cross-env NODE_ENV=prod electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "format": "prettier --write 'src/**/*.{ts,tsx,html,css}'"
  },
  "keywords": [],
  "author": "Gabriel Wu <wuzihua@pku.edu.cn>",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "gritty_map"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/renderer/index.html",
                  "js": "./src/renderer/index.tsx",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.3.3",
    "@electron-forge/cli": "6.0.0-beta.39",
    "@electron-forge/maker-deb": "6.0.0-beta.39",
    "@electron-forge/maker-rpm": "6.0.0-beta.39",
    "@electron-forge/maker-squirrel": "6.0.0-beta.39",
    "@electron-forge/maker-zip": "6.0.0-beta.39",
    "@electron-forge/plugin-webpack": "6.0.0-beta.39",
    "@marshallofsound/webpack-asset-relocator-loader": "0.5.0",
    "@types/node": "12.0.10",
    "@types/react": "16.8.22",
    "@types/react-dom": "16.8.4",
    "babel-loader": "8.0.6",
    "cross-env": "5.2.0",
    "css-loader": "3.0.0",
    "electron": "5.0.5",
    "file-loader": "4.0.0",
    "husky": "2.4.1",
    "lint-staged": "8.2.1",
    "mini-css-extract-plugin": "0.7.0",
    "node-loader": "0.6.0",
    "prettier": "1.18.2",
    "terser-webpack-plugin": "1.3.0",
    "typescript": "3.5.2",
    "webpack-merge": "4.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
